---
import Goban from "../components/Goban.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="404: Not found">
  <div class="fixed pointer-events-none inset-0 overflow-hidden">
    <Goban
      class="w-[180%] lg:w-[160%] -translate-x-1/4 absolute top-0 sm:-top-1/4 lg:-top-1/2 skew-x-4 opacity-10 -skew-x-12 skew-y-3"
    />
  </div>

  <main
    class="isolate flex flex-col items-center justify-center mt-32 gap-4 not-prose"
  >
    <h1 class="text-4xl font-semibold">Thanks for your message!</h1>
    <p class="text-lg">We'll get back to you asap.</p>
    <a href="/" class="text-blue-500 underline">Back to the home page</a>
  </main>
</Layout>
