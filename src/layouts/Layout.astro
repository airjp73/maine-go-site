---
interface Props {
  /**
   * Frontmatter might not be present if the page isn't generated from a Markdown file.
   */
  frontmatter?: Record<string, unknown>;
  
  /**
   * Specify the title of non-Markdown pages.
   */
  title?: string;
}

import Prose from "../components/Prose.astro";
import NarrowContainer from "../components/NarrowContainer.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

const title = Astro.props.frontmatter?.title || Astro.props.title || "Maine Go";
const headerImage = Astro.props.frontmatter?.["header-image"];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Maine Go Club" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>

  <Header />

  <main class="isolate">
    <div
        style={{
          backgroundImage: headerImage && "url('/maine-go-site/" + headerImage + "')"
        }}
        class:list={[
          headerImage && "h-[500px] bg-right-bottom bg-cover flex items-center justify-center mb-8"
        ]}
        >
      <div class="flex items-center justify-center relative pt-17">
        <h1 class="text-5xl sm:text-5xl font-semibold px-2 sm:px-6 py-4 bg-white/80 rounded-lg text-center"
        >
        {title}
        </h1>
      </div>
    </div>
    <NarrowContainer class="bg-white/69 rounded-lg p-10 pt-40 relative -mt-36">

      <Prose>
        <slot />
      </Prose>

    </NarrowContainer>
  </main>

  <Footer />
  </body>
</html>
